<!DOCTYPE html>
<html>
  <head>
    <title>Store</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <% flash.each do |key, value| %>
        <% if key=="notice" %>
          <div class="alert alert-success">
        <% elsif key == "alert" %>
          <div class="alert alert-danger">
        <% else %>
          <div class="alert alert-<%= key %>">
        <%end%>
        <a href="#" class="close" data-dismiss="alert">&#215;</a>
          <%= value %>
        </div>
      <% end %>
      <nav class="menu_on_top">
      <div class="menu-on-top dropdown">
        <i class="dropbtn fa fa-bars"></i>
        <div class="dropdown_content">
          <a class="home-menu" href="#">Home</a>
          <a href="<%= about_path %>">About</a>
          <a class="products-menu" href="<%= products_path %>">Products</a>
          <a href="<%= faqs_path %>">FAQs</a>
          <% if user_signed_in? %>
            <a href="<%= destroy_user_session_path %>" data-method="delete">Log Out</a>
          <% else %>
            <a href="<%= new_user_session_path %>"> Log In </a>
            <a href="<%= new_user_registration_path %>"> Sign Up </a>
          <% end %>
        </div>
      </div>
      <div id="cart" class="cart_info">
        <div class="cart-icon">
          
          <a data-popup-open="popup-cart" href="<%= cart_path(@cart) %>"><i class="fa fa-shopping-cart"></i></a>
        </div>
        <div class="popup" data-popup="popup-cart">
          <div class="triangle-up"></div>
          <div class="popup-inner">
            <p> data popup in here </p>
          </div>
        </div>
      </div>
      </nav>

      <%= yield %>
    </div>
  </body>
</html>
