<!DOCTYPE html>
<html>
  <head>
    <title>Store</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <% flash.each do |key, value| %>
        <% if key=="notice" %>
          <div class="alert alert-success">
        <% elsif key == "alert" %>
          <div class="alert alert-danger">
        <% else %>
          <div class="alert alert-<%= key %>">
        <%end%>
        <a href="#" class="close" data-dismiss="alert">&#215;</a>
          <%= value %>
        </div>
      <% end %>
      <nav class="menu-on-top">
				<a class="home-menu" href="#">Home</a>
       
				<a href="<%= about_path %>">About</a>
        <a class="products-menu" href="<%= products_path %>">Products</a>
				<a href="<%= faqs_path %>">FAQs</a>
				<% if user_signed_in? %>
					<a href="<%= destroy_user_session_path %>" data-method="delete">Log Out</a>
				<% else %>
					<a href="<%= new_user_session_path %>"> Log In </a>|
					<a href="<%= new_user_registration_path %>"> Sign Up </a>
				<% end %>
				<div class="show-when-click-home">
				</div>
				<div class="show-when-click-products">
				</div>
			</nav>

      <%= yield %>
    </div>
  </body>
</html>
