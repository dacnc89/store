<% content_for :admin_search_form do %>
  <%= form_tag admin_categories_path, method: "get" do %>
    <%= text_field_tag :search %>
    <%= submit_tag "Search" %>
  <% end %>
<% end %>

<%= pluralize(@categories.size, 'Category') %>  

<%= link_to new_category_path do %>
  <span class="fa fa-plus" style="color:blue">Add Category</span>
<% end %>
<br>
<% @categories.each do |c| %>
  <section class="roww">
    <%= c.name %>
    <% if c.subcategories.size > 0 %>
      <% c.subcategories.each do |sub| %>
        <%= sub.name %>
      <% end %>
    <% end %>
    <%= link_to "", c, method: :delete, data: {confirm: 'sure?'}, class: "option fa fa-remove" %>
    <%-# span class="option fa fa-pencil"></span> %>
  </section>
<% end %>
